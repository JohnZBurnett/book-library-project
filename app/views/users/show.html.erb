<p id="notice"><%= notice %></p>

<strong>User Name: </strong>  <%= @user.username %> <br>
<strong>First Name:</strong>  <%= @user.first_name %> <br>
<strong>Last Name: </strong> <%= @user.last_name %> <br>

<%= link_to "Check Out Book", books_path %>


<p><strong>Books Checked Out:</strong></p>

<% @checked_out_books.each do |checked_out_book| %>
<div>
<%= form_for checked_out_book, method: :patch do |f| %>
<%= link_to checked_out_book.book_copy.book.title,checked_out_book.book_copy.book %> in <%= checked_out_book.book_copy.library.name %>
<%=f.submit "Return Book" %>
<% end %></div>
<% end %>
<p><strong>Books Requested:</strong></p>
<% @requests.each do |request| %>
<%= request.title %> - Library: <%= request.library.name %> -Completed: <%=request.completed?%>
<% end %>

<ul>
<% if logged_in_user.username == "admin" %>
<p><strong>Pending Requests</strong></p>
  <% @all_requests.each do |request| %>
  <li><%= request.title %> -
  <%= request.library.name %></li>
    <%= form_tag '/approve-request', method: "post" do%>
      <%= hidden_field_tag 'request["title"]', request.title %>
      <%= hidden_field_tag 'request["description"]', request.description %>
      <%= hidden_field_tag 'request["library_id"]', request.library_id %>
      <%= hidden_field_tag 'request["id"]',request.id%>
      <%= submit_tag "Approve Request" %>
    <% end %>
  <% end %>
<% end %>
</ul>
