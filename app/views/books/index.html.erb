
<%= form_tag "/books/search", method: "get" do %>
<strong><%= label_tag(:title, "Search by Title:")%></strong>
<%= text_field_tag(:title, ) %>
<%= submit_tag("Search") %>
<% end %>
<% if !@search %>

<%= render "layouts/books_form" %>


<div class="centered-link" ><%= will_paginate @books %></div>

<% else %>
<%= render "layouts/books_form" %>

  <% if logged_in? %>
   <div class="centered-link"><%= link_to "Didn't find your book? Request a book","/request-form" %></div>
  <% end %>
<% end %>
