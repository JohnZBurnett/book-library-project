<h1 class="ui center aligned header"><%=@library.name %></h1>
<h3 class="ui center aligned header"> <strong>Location:</strong> <%=@library.location %></h3>


<table class="ui very basic collapsing celled centered-table table">
  <thead>
    <tr><th>Book</th>
    <th>Author</th>
  </tr></thead>
  <% @library_books.each do |copy| %>
    <tr><td><div class="content"><%= link_to copy.book.title[0..75], copy.book %></div></td>
      <td><%=copy.book.author %> </td>
    </tr>
  <% end %>
</table>
